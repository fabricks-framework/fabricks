{% if format == "dataframe" %}
  merge into {{ tgt }} t using {{ "{src}" }} s
{% endif %}
{% if format == "view" %}
  merge into {{ tgt }} t using {{ src }} s
{% endif %}
{% if has_key %}
  on t.__key == s.__merge_key
{% else %}
  on
    {% for k in keys %}
  t.{{ k }} <=> s.{{ k }}
    {% endfor %}
{% endif %}
{% if has_source %}
  and t.__source == s.__source 
{% endif %}
{% if update_where %} {{ update_where }} {% endif %}
  when matched
  and __merge_condition == 'upsert' then
  update
  set
{% for c in columns %}
    {{ c }} = s.{{c}},
{% endfor %}
-- delete
  when matched
  and __merge_condition == 'delete' then
  delete
  when not matched
  and __merge_condition == 'upsert' then
  insert (
{% for c in columns %}
    {{ c }},
{% endfor %}
  )
  values (
{% for c in columns %}
    s.{{ c }},
{% endfor %}
  )
