{% if format == "dataframe" %}
  merge into {{ tgt }} t using {{ "{src}" }} s
{% endif %}
{% if format == "view" %}
  merge into {{ tgt }} t using {{ src }} s
{% endif %}
{% if has_key %}
  on t.__key == s.__merge_key
{% else %}
  on
    {% for k in keys %}
  t.{{ k }} <=> s.{{ k }}
    {% endfor %}
{% endif %}
{% if has_source %}
  and t.__source == s.__source 
{% endif %}
{% if update_where %} {{ update_where }} {% endif %}
  when matched
  and __merge_condition == 'upsert' then
  update
  set
{% for f in fields %}
    {{ f }} = s.{{f}},
{% endfor %}
{% if has_timestamp %}
    __timestamp = s.__timestamp,
{% endif %}
{% if has_metadata %}
    __metadata.updated = cast(current_timestamp() as timestamp),    
{% endif %}
{% if has_hash %}
    __hash = s.__hash,
{% endif %}
-- delete
  when matched
  and __merge_condition == 'delete' then
  delete
  when not matched
  and __merge_condition == 'upsert' then
  insert (
{% for c in columns %}
    {{ c }},
{% endfor %}
  )
  values (
{% for c in columns %}
    s.{{ c }},
{% endfor %}
  )
